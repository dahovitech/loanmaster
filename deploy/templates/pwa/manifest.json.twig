  "shortcuts": [
    {
      "name": "Nouveau prêt",
      "short_name": "Nouveau prêt",
      "description": "Créer une nouvelle demande de prêt",
      "url": "{{ url('loan_create') }}",
      "icons": [{"src": "{{ asset('icons/shortcut-new-loan.png') }}", "sizes": "96x96"}]
    },
    {
      "name": "Mes prêts",
      "short_name": "Mes prêts", 
      "description": "Voir mes prêts en cours",
      "url": "{{ url('loan_list') }}",
      "icons": [{"src": "{{ asset('icons/shortcut-my-loans.png') }}", "sizes": "96x96"}]
    },
    {
      "name": "Profil",
      "short_name": "Profil",
      "description": "Gérer mon profil et KYC",
      "url": "{{ url('user_profile') }}",
      "icons": [{"src": "{{ asset('icons/shortcut-profile.png') }}", "sizes": "96x96"}]
    },
    {
      "name": "Support",
      "short_name": "Support",
      "description": "Contacter le support client",
      "url": "{{ url('app_contact') }}",
      "icons": [{"src": "{{ asset('icons/shortcut-support.png') }}", "sizes": "96x96"}]
    }
  ],
  "screenshots": [
    {
      "src": "{{ asset('screenshots/desktop-1.png') }}",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Dashboard principal LoanMaster"
