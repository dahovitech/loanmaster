<section class="country-section fix section-padding section-bg-3 bg-cover" style="background-image: url('assets/img/flag/lines-waves1.png');">
	<div class="section-title text-center">
		<span class="text-white wow fadeInUp">{{"front.country.title"|trans|raw}}</span>
		<h2 class="text-white title-anim">
			{{"front.country.text1"|trans|raw}}
		</h2>
	</div>
	<div class="container">
		<div class="row g-4">
			<div class="swiper flag-slider">
				<div class="swiper-wrapper">
					{% for country in countries() %}
						<div class="swiper-slide">
							<div class="country-box-items style-2 mt-0">
								<div class="flag-thumb">
									<img width="140" height="140" class="rounded-circle" src="{{ asset('flags/4x3/' ~ country.code|lower ~ '.svg') }}" alt="img">
								</div>
								<div class="flag-content">
									<h3>
										<a href="{{path('country_show',{code: country.code|lower})}}">{{country_name(country.code)}}</a>
									</h3>
									<p>
										{{country.resume|raw}}
									</p>
								</div>
							</div>
						</div>

					{% endfor %}

				</div>
			</div>
		</div>
		<div class="text-center mt-3">
				<a href="{{path('country_index')}}" class="theme-btn theme-btn-2">
					<span>{{"btn.seeMore"|trans}}</span>
					<i class="fas fa-plus"></i>
				</a>
			</div>
	</div>
</section>
