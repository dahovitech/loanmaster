<!--<< Grow Section Start >>-->
	<section class="country-section section-padding section-bg-3">
		<div class="container">
			<div class="section-title text-center">
				<span class="text-white wow fadeInUp">{{"front.country.title"|trans|raw}}</span>
				<h2 class="text-white title-anim">
					{{"front.country.text1"|trans|raw}}
				</h2>
			</div>
			<div class="row">

				{% for country in countries() %}
					<div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay=".2s">
						<div class="single-country-items">
							<div class="country-image">
								<img src="{{country.image}}" alt="img">
								<div class="flag">
									<img class="rounded-circle" src="{{ asset('flags/4x3/' ~ country.code|lower ~ '.svg') }}" alt="img">
								</div>
							</div>
							<div class="contry-content">
								<h3>
									<a href="{{path('country_show',{code: country.code|lower})}}">{{country_name(country.code)}}</a>
								</h3>
								<p>{{country.resume|raw}}</p>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>