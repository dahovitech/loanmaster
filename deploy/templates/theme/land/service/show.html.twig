{% extends '@theme/base.html.twig' %}

{% block body %}
	<!--<< Breadcrumb Section Start >>-->
	<div class="breadcrumb-wrapper section-padding bg-cover" style="background-image: url({{ asset('theme/land/assets/img/contact.jpg') }});">
		<div class="container">
			<div class="page-heading">
				<h1 class="wow fadeInUp" data-wow-delay=".3s">{{service.name|raw}}</h1>
				<ul class="breadcrumb-items wow fadeInUp" data-wow-delay=".5s">
					<li>
						<a href="{{path('home')}}">
							{{"front.menu.home"|trans}}
						</a>
					</li>
					<li>
						<i class="fal fa-minus"></i>
					</li>
					<li>
						{{service.name|raw}}
					</li>
				</ul>
			</div>
		</div>
	</div>

	<!--<< Visa Details Section Start >>-->
	<section class="visa-details-section fix section-padding">
		<div class="container">
			<div class="visa-details-wrapper">
				<div class="row g-5">
					<div class="col-lg-4 order-2 order-md-1">
						<div class="visa-sidebar">
							<div class="visa-widget-categories">
								<ul>
									{% for serviceList in services() %}
										<li>
											<a href="{{path('service_show',{slug: serviceList.slug})}}">{{serviceList.name|raw}}<span>
													<i class="fas fa-chevron-right"></i>
												</span>
											</a>
										</li>

									{% endfor %}
								</ul>
							</div>
							<div class="visa-sidebar-widget">
								<div class="contact-bg text-center bg-cover" style="background-image: url({{asset(service.image)}});">
									<h4>{{"doYouHaveAnyQuestion"|trans|raw}}</h4>
									<h4>
										<a class="text-white" href="mailto:{{setting('email')}}">{{setting('email')}}</a>
									</h4>
								
								</div>
							</div>
							
						</div>
					</div>
					<div class="col-lg-8 order-1 order-md-2">
						<div class="service-details-items">
							<div class="details-image">
								<img src="{{asset(service.image)}}" alt="img">
							</div>
							<div class="details-content">
								<h2 class="title-anim">{{service.name|raw}}</h2>
								{{service.description|raw}}
								<h3 class="mt-5">{{"front.step.title"|trans}}</h3>


								<div class="row">
									<div class="col-lg-12">
										{% for step in steps() %}
											<div class="single-icon-items">
												<div class="icon-box">
													<div class="icon">
														<i class="{{step.icon}}"></i>
													</div>
													<h6>{{ step.title }}</h6>
												</div>

											</div>

										{% endfor %}
									</div>
								</div>
								{{ include('@theme/inc/faq2.html.twig') }}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
		{{ include('@theme/inc/action1.html.twig') }}

	{{ include('@theme/inc/testimonial1.html.twig') }}

{% endblock %}
