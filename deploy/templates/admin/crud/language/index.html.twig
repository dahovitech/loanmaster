{% extends '@admin/base.html.twig' %}

{% block title %}Listes des langues
{% endblock %}

{% block body %}
	<!--breadcrumb-->
	<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
		<div class="breadcrumb-title pe-3">Listes des langues</div>
		<div class="ps-3">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb mb-0 p-0">
					<li class="breadcrumb-item">
						<a href="{{ path('app_admin_dashboard') }}">
							<i class="bx bx-home-alt"></i>
						</a>
					</li>
					<li class="breadcrumb-item active" aria-current="page">Listes des langues</li>
				</ol>
			</nav>
		</div>
	</div>
	<!--end breadcrumb-->
	<div class="row">
		<div class="col-md-8">
			<div class="card">
				<div class="card-body">
					<a class="btn btn-block btn-outline-primary mb-3" href="{{ path('app_crud_new',{entityName: 'language'}) }}">Ajouter un langues</a>
					<div class="table-responsive">
						<table id="tab2" class="table table-striped table-bordered" style="width:100%">
							<thead>
								<tr>
									<th>Nom</th>
									<th>Code</th>
									<th>Statut</th>
									<th>Par Défaut</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
								{% for entity in entities %}
									<tr>
										<td>{{ entity.name }}</td>
										<td>{{ entity.code }}</td>
										<td>{{ entity.isEnabled ? 'Activé' : 'Désactivé' }}</td>
										<td>{{ entity.isDefault ? 'Par Défaut' : 'Non' }}</td>
										<td>
											<a class="btn btn-sm btn-warning" href="{{ path('app_crud_update', {'id': entity.id,entityName: 'language'}) }}">Modifier</a>
											{{ include('@admin/crud/language/_delete_form.html.twig') }}

										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="4">Aucun enregistrement trouvé</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
