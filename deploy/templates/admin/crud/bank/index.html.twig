{% extends '@admin/base.html.twig' %}

{% block title %}Listes des banques{% endblock %}



{% block body %}

<!--breadcrumb-->
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">Listes des banques Prêteur</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Listes des banques Prêteur</li>
            </ol>
        </nav>
    </div>
</div>
<!--end breadcrumb-->
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <a class="btn btn-block btn-outline-primary" href="{{ path('app_crud_new',{entityName: 'bank'}) }}">Ajouter</a>
                <div class="table-responsive">
                    <table id="tab2" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Logo</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for bank in entities %}
                            <tr>
                                <td>{{ bank.id }}</td>
                                <td>{{ bank.name }}</td>
                                <td><img src="{{ bank.logo }}" width="50" alt=""></td>
                                <td>
                                    <a href="{{ path('app_crud_show', {'id': bank.id,entityName: 'bank'}) }}">show</a>
                                    <a href="{{ path('app_crud_update', {'id': bank.id,entityName: 'bank'}) }}">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
  
{% endblock %}
