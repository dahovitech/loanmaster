{% extends "@admin/base.html.twig" %}

{% block title %}{{ 'loan.show.title'|trans }}{% endblock %}

{% block body %}
<!--breadcrumb-->
<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
    <div class="breadcrumb-title pe-3">{{ 'loan.show.title'|trans }}</div>
    <div class="ps-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0 p-0">
                <li class="breadcrumb-item"><a href="{{ path('app_user_dashboard') }}"><i class="bx bx-home-alt"></i></a>
                </li>
                 <li class="breadcrumb-item"><a href="{{path('app_user_loan_list')}}"><i class="bx bx-list"></i> {{ 'loan.list.title'|trans }}</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">{{ 'loan.show.title'|trans }}</li>
            </ol>
        </nav>
    </div>
</div>
<!--end breadcrumb-->
<div class="row">
    <div class="col-md-8">
        <h6 class="mb-0 text-uppercase">{{ 'loan.show.title'|trans }}</h6>
        <hr/>
        <div class="card">
            <div class="card-body">
                <p><strong>{{ 'loan.show.loanNumber'|trans }}:</strong> {{ loan.loanNumber }}</p>
                <p><strong>{{ 'loan.show.startDate'|trans }}:</strong> {{ loan.startDate|date('Y-m-d H:i') }}</p>
                <p><strong>{{ 'loan.show.endDate'|trans }}:</strong> {{ loan.endDate ? loan.endDate|date('Y-m-d H:i') : '' }}</p>
                <p><strong>{{ 'loan.show.amount'|trans }}:</strong> {{ loan.amount }}</p>
                <p><strong>{{ 'loan.show.interestRate'|trans }}:</strong> {{ loan.interestRate }}</p>
                <p><strong>{{ 'loan.show.durationMonths'|trans }}:</strong> {{ loan.durationMonths }}</p>
                <p><strong>{{ 'loan.show.status'|trans }}:</strong> {{ loan.status|trans }}</p>
                <p><strong>{{ 'loan.show.notes'|trans }}:</strong> {{ loan.notes }}</p>
                <a href="{{ path('loan_edit', {id: loan.id}) }}" class="btn btn-warning btn-sm">{{ 'loan.show.edit'|trans }}</a>
                <a href="{{ path('loan_list') }}" class="btn btn-primary btn-sm">{{ 'loan.show.backToList'|trans }}</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
