{% extends 'admin/base.html.twig' %}

{% block title %}Édition des traductions - {{ page.title ?? 'Page #' ~ page.id }}{% endblock %}

{% block page_header %}
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h3 mb-0">Traductions de la page</h1>
            <p class="text-muted mb-0">{{ page.title ?? 'Page #' ~ page.id }} - <code>{{ page.slug }}</code></p>
        </div>
        <div class="btn-group">
            <a href="{{ path('admin_page_translations_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
            <a href="{{ path('admin_page_translations_export', {id: page.id}) }}" class="btn btn-outline-primary">
                <i class="bi bi-download"></i> Exporter
            </a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <form id="translation-form" method="post" action="{{ path('admin_page_translations_edit', {id: page.id}) }}">
        <div class="row">
            <!-- Langues disponibles -->
            <div class="col-md-3">
                <div class="card position-sticky" style="top: 2rem;">
                    <div class="card-header">
                        <h6 class="card-title mb-0">Langues disponibles</h6>
                    </div>
                    <div class="list-group list-group-flush">
                        {% for language in languages %}
                            {% set translation = translations[language.code] %}
                            {% set isComplete = translation.title and translation.content %}
                            <a href="#lang-{{ language.code }}" 
                               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center language-tab"
                               data-lang="{{ language.code }}">
                                <div>
                                    <div class="fw-medium">{{ language.name }}</div>
                                    <small class="text-muted">{{ language.nativeName }}</small>
                                </div>
                                <div>
                                    {% if language.isDefault %}
                                        <span class="badge bg-primary-subtle text-primary me-1">Défaut</span>
                                    {% endif %}
                                    {% if isComplete %}
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                    {% else %}
                                        <i class="bi bi-exclamation-circle text-warning"></i>
                                    {% endif %}
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                    <div class="card-footer">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success" id="save-btn">
                                <i class="bi bi-check-lg"></i> Sauvegarder
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="copyFromDefault()">
                                <i class="bi bi-copy"></i> Copier depuis défaut
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Formulaires de traduction -->
            <div class="col-md-9">
                <div class="tab-content">
                    {% for language in languages %}
                        {% set translation = translations[language.code] %}
                        <div class="tab-pane{% if loop.first %} show active{% endif %}" 
                             id="lang-{{ language.code }}" 
                             data-lang="{{ language.code }}">
                            
                            <div class="card">
                                <div class="card-header">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h5 class="card-title mb-0">
                                            <i class="bi bi-flag"></i>
                                            {{ language.name }} ({{ language.code|upper }})
                                        </h5>
                                        {% if language.isDefault %}
                                            <span class="badge bg-primary">Langue par défaut</span>
                                        {% endif %}
                                    </div>
                                </div>
                                
                                <div class="card-body">
                                    <div class="row">
                                        <!-- Titre -->
                                        <div class="col-12 mb-3">
                                            <label for="title_{{ language.code }}" class="form-label">
                                                Titre <span class="text-danger">*</span>
                                            </label>
                                            <input type="text" 
                                                   id="title_{{ language.code }}"
                                                   name="title[{{ language.code }}]" 
                                                   class="form-control"
                                                   value="{{ translation.title }}"
                                                   placeholder="Titre de la page en {{ language.name|lower }}"
                                                   maxlength="255">
                                            <div class="form-text">
                                                <span class="char-count" data-target="title_{{ language.code }}">{{ translation.title|length }}</span>/255 caractères
                                            </div>
                                        </div>

                                        <!-- Meta Description -->
                                        <div class="col-12 mb-3">
                                            <label for="metaDescription_{{ language.code }}" class="form-label">
                                                Meta Description
                                            </label>
                                            <textarea id="metaDescription_{{ language.code }}"
                                                      name="metaDescription[{{ language.code }}]" 
                                                      class="form-control"
                                                      rows="3"
                                                      placeholder="Description pour les moteurs de recherche"
                                                      maxlength="500">{{ translation.metaDescription }}</textarea>
                                            <div class="form-text">
                                                <span class="char-count" data-target="metaDescription_{{ language.code }}">{{ translation.metaDescription|length }}</span>/500 caractères
                                            </div>
                                        </div>

                                        <!-- Contenu -->
                                        <div class="col-12 mb-3">
                                            <label for="content_{{ language.code }}" class="form-label">
                                                Contenu <span class="text-danger">*</span>
                                            </label>
                                            <textarea id="content_{{ language.code }}"
                                                      name="content[{{ language.code }}]" 
                                                      class="form-control content-editor"
                                                      rows="15"
                                                      placeholder="Contenu de la page en {{ language.name|lower }}">{{ translation.content }}</textarea>
                                            <div class="form-text">
                                                Utilisez HTML pour formater le contenu
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Référence langue par défaut -->
                                    {% if not language.isDefault %}
                                        {% set defaultLang = languages|first %}
                                        {% for lang in languages %}
                                            {% if lang.isDefault %}
                                                {% set defaultLang = lang %}
                                                {% break %}
                                            {% endif %}
                                        {% endfor %}
                                        {% set defaultTranslation = translations[defaultLang.code] %}
                                        
                                        {% if defaultTranslation.title or defaultTranslation.content %}
                                            <div class="alert alert-info">
                                                <h6 class="alert-heading">
                                                    <i class="bi bi-info-circle"></i>
                                                    Référence {{ defaultLang.name }}
                                                </h6>
                                                {% if defaultTranslation.title %}
                                                    <p><strong>Titre:</strong> {{ defaultTranslation.title }}</p>
                                                {% endif %}
                                                {% if defaultTranslation.metaDescription %}
                                                    <p><strong>Meta Description:</strong> {{ defaultTranslation.metaDescription }}</p>
                                                {% endif %}
                                                {% if defaultTranslation.content %}
                                                    <details>
                                                        <summary><strong>Contenu (cliquer pour voir)</strong></summary>
                                                        <div class="mt-2 p-2 bg-light rounded">
                                                            {{ defaultTranslation.content|raw }}
                                                        </div>
                                                    </details>
                                                {% endif %}
                                            </div>
                                        {% endif %}
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </form>

    <!-- Bouton de sauvegarde flottant -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050;">
        <button type="button" class="btn btn-success btn-lg shadow" onclick="saveTranslations()" id="floating-save">
            <i class="bi bi-check-lg"></i> Sauvegarder
        </button>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .language-tab {
            cursor: pointer;
            transition: all 0.2s;
        }
        .language-tab:hover {
            background-color: rgba(var(--bs-primary-rgb), 0.1);
        }
        .language-tab.active {
            background-color: rgba(var(--bs-primary-rgb), 0.2);
            border-color: var(--bs-primary);
        }
        .content-editor {
            font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
        }
        .char-count {
            font-weight: 500;
        }
        .tab-pane {
            display: none;
        }
        .tab-pane.show.active {
            display: block;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Gestion des onglets de langues
        document.querySelectorAll('.language-tab').forEach(tab => {
            tab.addEventListener('click', function(e) {
                e.preventDefault();
                
                // Désactiver tous les onglets
                document.querySelectorAll('.language-tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-pane').forEach(p => p.classList.remove('show', 'active'));
                
                // Activer l'onglet cliqué
                this.classList.add('active');
                const targetLang = this.getAttribute('data-lang');
                document.getElementById('lang-' + targetLang).classList.add('show', 'active');
            });
        });

        // Compteur de caractères
        document.querySelectorAll('input[type="text"], textarea').forEach(input => {
            input.addEventListener('input', function() {
                const counter = document.querySelector('.char-count[data-target="' + this.id + '"]');
                if (counter) {
                    counter.textContent = this.value.length;
                }
            });
        });

        // Sauvegarde
        function saveTranslations() {
            const form = document.getElementById('translation-form');
            const formData = new FormData(form);
            
            // Afficher un indicateur de chargement
            const saveBtn = document.getElementById('floating-save');
            const originalText = saveBtn.innerHTML;
            saveBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Sauvegarde...';
            saveBtn.disabled = true;

            fetch(form.action, {
                method: 'POST',
                body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.status === 'success') {
                    // Animation de succès
                    saveBtn.innerHTML = '<i class="bi bi-check-lg"></i> Sauvegardé !';
                    saveBtn.classList.remove('btn-success');
                    saveBtn.classList.add('btn-outline-success');
                    
                    setTimeout(() => {
                        saveBtn.innerHTML = originalText;
                        saveBtn.classList.remove('btn-outline-success');
                        saveBtn.classList.add('btn-success');
                        saveBtn.disabled = false;
                    }, 2000);
                } else {
                    throw new Error('Erreur de sauvegarde');
                }
            })
            .catch(error => {
                console.error('Erreur:', error);
                saveBtn.innerHTML = '<i class="bi bi-exclamation-triangle"></i> Erreur';
                saveBtn.classList.remove('btn-success');
                saveBtn.classList.add('btn-danger');
                
                setTimeout(() => {
                    saveBtn.innerHTML = originalText;
                    saveBtn.classList.remove('btn-danger');
                    saveBtn.classList.add('btn-success');
                    saveBtn.disabled = false;
                }, 2000);
            });
        }

        // Copier depuis la langue par défaut
        function copyFromDefault() {
            if (!confirm('Copier le contenu de la langue par défaut vers toutes les autres langues ? Cela remplacera le contenu existant.')) {
                return;
            }
            
            // Trouver la langue par défaut
            const defaultLang = document.querySelector('.badge.bg-primary').closest('.language-tab').getAttribute('data-lang');
            
            // Récupérer les valeurs par défaut
            const defaultTitle = document.getElementById('title_' + defaultLang).value;
            const defaultMeta = document.getElementById('metaDescription_' + defaultLang).value;
            const defaultContent = document.getElementById('content_' + defaultLang).value;
            
            // Appliquer à toutes les autres langues
            document.querySelectorAll('.language-tab').forEach(tab => {
                const langCode = tab.getAttribute('data-lang');
                if (langCode !== defaultLang) {
                    document.getElementById('title_' + langCode).value = defaultTitle;
                    document.getElementById('metaDescription_' + langCode).value = defaultMeta;
                    document.getElementById('content_' + langCode).value = defaultContent;
                }
            });
            
            alert('Contenu copié vers toutes les langues.');
        }

        // Sauvegarde automatique avec Ctrl+S
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey && e.key === 's') {
                e.preventDefault();
                saveTranslations();
            }
        });

        // Initialiser le premier onglet
        document.querySelector('.language-tab').click();
    </script>
{% endblock %}
