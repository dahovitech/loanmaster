{% extends "@admin/base.html.twig" %}

{% block body %}
	<!--breadcrumb-->
	<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
		<div class="breadcrumb-title pe-3">{{"admin.page.notification.index.title"|trans}}</div>
		<div class="ps-3">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb mb-0 p-0">
					<li class="breadcrumb-item">
						<a href="javascript:;">
							<i class="bx bx-home-alt"></i>
						</a>
					</li>
					<li class="breadcrumb-item active" aria-current="page">{{"admin.page.notification.index.title"|trans}}</li>
				</ol>
			</nav>
		</div>
	</div>
	<!--end breadcrumb-->
	<div class="row">

		<div class="col-md-10">
			<hr/>
			<div class="card card-bordered ">
				<div class="card-body">
					<div class="table-responsive">
						<table id="tab2" class="table table-striped table-bordered" style="width:100%">
							<thead>
								<tr>
									<th>{{"table.subject"|trans}}</th>
									<th>{{"table.status"|trans}}</th>
									<th>{{"table.date"|trans}}</th>
									<th>{{"table.actions"|trans}}</th>
								</tr>
							</thead>
							<tbody>
								{% for notif in notifications %}
									<tr>
										<td>{{notif.subject|raw}}</td>
										{% set status =  "status." ~ notif.status %}
										<td>{{status|trans }}</td>
										<td>{{notif.createdAt|date('d M Y H:i')|format_datetime() }}</td>
										<td>
											<a href="{{ path('app_user_notification_show', {'id': notif.id}) }}">{{"btn.details"|trans}}</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>

		</div>
	</div>
{% endblock %}
