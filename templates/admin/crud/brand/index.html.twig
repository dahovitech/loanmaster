{% extends '@admin/base.html.twig' %}

{% block title %}Listes des brands
{% endblock %}


{% block body %}

	<!--breadcrumb-->
	<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
		<div class="breadcrumb-title pe-3">Listes des brands</div>
		<div class="ps-3">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb mb-0 p-0">
					<li class="breadcrumb-item">
						<a href="javascript:;">
							<i class="bx bx-home-alt"></i>
						</a>
					</li>
					<li class="breadcrumb-item active" aria-current="page">Listes des brands</li>
				</ol>
			</nav>
		</div>
	</div>
	<!--end breadcrumb-->
	<div class="row">
		<div class="col-md-8">
			<div class="card">
				<div class="card-body">
					<a class="btn btn-block btn-outline-primary" href="{{ path('app_crud_new',{entityName: entityName}) }}">Ajouter</a>
					<div class="table-responsive">
						<table id="tab2" class="table table-striped table-bordered" style="width:100%">
							<thead>
								<tr>
									<th>Image</th>
									<th>Enabled</th>
									<th>actions</th>
								</tr>
							</thead>
							<tbody>
								{% for entity in entities %}
									<tr>
										<td><img src="{{ entity.image }}" width="50" alt=""></td>
										<td>{{ entity.isEnabled ? 'Yes' : 'No' }}</td>
										<td>
											<a class="btn btn-primary btn-sm" href="{{ path('app_crud_update', {'id': entity.id,entityName: entityName}) }}">edit</a>
											{{ include('@admin/crud/brand/_delete_form.html.twig') }}

										</td>
									</tr>
								
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
