{% extends '@admin/base.html.twig' %}

{% block title %}Theme Details{% endblock %}

{% block body %}
    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">{{ 'themeDetails'|trans }}</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_admin_dashboard') }}">
                            <i class="bx bx-home-alt"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">{{ 'themeDetails'|trans }}</li>
                </ol>
            </nav>
        </div>
    </div>
    <!--end breadcrumb-->
    <div class="row">
        <div class="col-md-10">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>{{ 'name'|trans }}</th>
                                <td>{{ theme.name|trans }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'image'|trans }}</th>
                                <td><img src="{{ theme.image }}" alt="{{ theme.name|trans }}" width="200"></td>
                            </tr>
                            <tr>
                                <th>{{ 'primaryColor'|trans }}</th>
                                <td style="background-color: {{ theme.primaryColor }}">{{ theme.primaryColor }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'secondaryColor'|trans }}</th>
                                <td style="background-color: {{ theme.secondaryColor }}">{{ theme.secondaryColor }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'header'|trans }}</th>
                                <td>{{ theme.header }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'slider'|trans }}</th>
                                <td>{{ theme.slider }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'footer'|trans }}</th>
                                <td>{{ theme.footer }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <a href="{{ path('app_crud_index', {'entityName': 'Theme'}) }}" class="btn btn-secondary">{{ 'backToList'|trans }}</a>
                    <a href="{{ path('app_crud_update', {'entityName': 'Theme', 'id': theme.id}) }}" class="btn btn-warning">{{ 'edit'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
