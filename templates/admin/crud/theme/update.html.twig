{% extends '@admin/base.html.twig' %}

{% block title %}{% if entity.id is defined %}{{ 'edit'|trans }}{% else %}{{ 'create'|trans }}{% endif %} {{ 'theme'|trans }}{% endblock %}

{% block body %}
    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">{% if entity.id is defined %}{{ 'edit'|trans }}{% else %}{{ 'create'|trans }}{% endif %} {{ 'theme'|trans }}</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_admin_dashboard') }}">
                            <i class="bx bx-home-alt"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">{% if entity.id is defined %}{{ 'edit'|trans }}{% else %}{{ 'create'|trans }}{% endif %} {{ 'theme'|trans }}</li>
                </ol>
            </nav>
        </div>
    </div>
    <!--end breadcrumb-->
    <div class="row">
        <div class="col-md-10">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-primary">{{ 'save'|trans }}</button>
                    {{ form_end(form) }}
                    <a href="{{ path('app_crud_index', {'entityName': 'Theme'}) }}" class="btn btn-secondary">{{ 'backToList'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
